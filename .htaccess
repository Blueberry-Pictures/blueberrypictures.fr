RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule (.*) $1.php [L]

ErrorDocument 401 https://blueberrypictures.fr/error/401.html
ErrorDocument 402 https://blueberrypictures.fr/error/402.html
ErrorDocument 403 https://blueberrypictures.fr/error/403.html
ErrorDocument 404 https://blueberrypictures.fr/error/404.html
ErrorDocument 500 https://blueberrypictures.fr/error/500.html
ErrorDocument 502 https://blueberrypictures.fr/error/502.html